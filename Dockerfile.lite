# D:\AI\videoresizer\Dockerfile.lite
FROM python:3.11-slim

# FFmpeg para el resize
RUN apt-get update && apt-get install -y --no-install-recommends ffmpeg \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Dependencias mínimas de la API
COPY requirements_api_resize.txt .
RUN pip install --no-cache-dir -r requirements_api_resize.txt

# Código
COPY api/ ./api/
COPY scripts/ ./scripts/

EXPOSE 8000
CMD ["uvicorn", "api.main:app", "--host", "0.0.0.0", "--port", "8000"]
